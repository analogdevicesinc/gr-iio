<?xml version="1.0"?>
<block>
	<name>PlutoSDR Source</name>
	<key>pluto_source</key>
	<category>[Industrial IO]/PlutoSDR</category>
	<flags>throttle</flags>
	<import>from gnuradio import iio</import>
	<make>iio.pluto_source($uri, $frequency, $samplerate, $bandwidth, $buffer_size, $quadrature, $rfdc, $bbdc, $gain, $manual_gain, $filter, $auto_filter)</make>
	<callback>set_params($frequency, $samplerate, $bandwidth, $quadrature, $rfdc, $bbdc, $gain, $manual_gain, $filter, $auto_filter)</callback>

	<param>
		<name>Device URI</name>
		<key>uri</key>
		<value></value>
		<type>string</type>
	</param>

	<param>
		<name>LO Frequency</name>
		<key>frequency</key>
		<value>2400000000</value>
		<type>int</type>
	</param>

	<param>
		<name>Sample rate</name>
		<key>samplerate</key>
		<value>2084000</value>
		<type>int</type>
	</param>

	<param>
		<name>RF bandwidth</name>
		<key>bandwidth</key>
		<value>20000000</value>
		<type>int</type>
	</param>

	<param>
		<name>Buffer size</name>
		<key>buffer_size</key>
		<value>0x8000</value>
		<type>int</type>
	</param>

	<param>
		<name>Quadrature</name>
		<key>quadrature</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>RF DC</name>
		<key>rfdc</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>BB DC</name>
		<key>bbdc</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>Gain Mode</name>
		<key>gain</key>
		<type>enum</type>
		<option>
			<name>Manual</name>
			<key>"manual"</key>
		</option>
		<option>
			<name>Slow</name>
			<key>"slow_attack"</key>
		</option>
		<option>
			<name>Fast</name>
			<key>"fast_attack"</key>
		</option>
		<option>
			<name>Hybrid</name>
			<key>"hybrid"</key>
		</option>
	</param>

	<param>
		<name>Manual Gain (dB)</name>
		<key>manual_gain</key>
		<value>64.0</value>
		<type>real</type>
		<hide>#if $gain() == '"manual"' then 'none' else 'all'#</hide>
	</param>

	<param>
		<name>Filter</name>
		<key>filter</key>
		<value></value>
		<type>file_open</type>
	</param>

	<param>
		<name>Filter auto</name>
		<key>auto_filter</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<!-- if we're below 2.084 MSPS, we require either a user-supplied filter, or the auto filter. -->
	<check>($samplerate &gt;= 2084000) or (len($filter) &gt; 0) or $auto_filter</check>

	<!-- We can't enable user-supplied filter and auto-filter at the same time. -->
	<check>not ($auto_filter and len($filter))</check>

	<source>
		<name>out</name>
		<type>complex</type>
		<nports>1</nports>
	</source>
</block>
