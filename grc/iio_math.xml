<?xml version="1.0"?>
<block>
	<name>Function</name>
	<key>math</key>
	<category>[Industrial IO]/Math Operators</category>
	<import>import iio</import>
	<make>iio.iio_math($function, $num_inputs)</make>

	<param>
		<name>f(x) =</name>
		<key>function</key>
		<value></value>
		<type>string</type>
	</param>

	<param>
		<name>Num Inputs</name>
		<key>num_inputs</key>
		<value>1</value>
		<type>int</type>
	</param>

	<!-- Refuse empty strings -->
	<check>$function</check>

	<check>$num_inputs &gt; 0</check>

	<sink>
		<name>in</name>
		<type>float</type>
		<nports>$num_inputs</nports>
	</sink>

	<source>
		<name>out</name>
		<type>float</type>
	</source>
</block>
