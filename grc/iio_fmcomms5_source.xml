<?xml version="1.0"?>
<block>
	<name>FMComms5 Source</name>
	<key>iio_fmcomms5_source</key>
	<category>[Industrial IO]/FMComms</category>
	<flags>throttle</flags>
	<import>from gnuradio import iio</import>
	<make>iio.fmcomms5_source_f32c($uri, int($frequency1), int($frequency2), int($samplerate), int($bandwidth), $ch1_en, $ch2_en, $ch3_en, $ch4_en, $buffer_size, $quadrature, $rfdc, $bbdc, $gain1, $manual_gain1, $gain2, $manual_gain2, $gain3, $manual_gain3, $gain4, $manual_gain4, $rf_port_select, $filter)</make>
	<callback>set_params(int($frequency1), int($frequency2), int($samplerate), int($bandwidth), $quadrature, $rfdc, $bbdc, $gain1, $manual_gain1, $gain2, $manual_gain2, $gain3, $manual_gain3, $gain4, $manual_gain4, $rf_port_select)</callback>

	<param>
		<name>IIO context URI</name>
		<key>uri</key>
		<value>local:</value>
		<type>string</type>
	</param>

	<param>
		<name>LO Frequency (RX1/RX2)</name>
		<key>frequency1</key>
		<value>2400000000</value>
		<type>real</type>
	</param>

	<param>
		<name>LO Frequency (RX3/RX4)</name>
		<key>frequency2</key>
		<value>2400000000</value>
		<type>real</type>
	</param>

	<param>
		<name>Sample rate</name>
		<key>samplerate</key>
		<value>2084000</value>
		<type>real</type>
	</param>

	<param>
		<name>RF bandwidth</name>
		<key>bandwidth</key>
		<value>20000000</value>
		<type>real</type>
	</param>

	<param>
		<name>Buffer size</name>
		<key>buffer_size</key>
		<value>0x8000</value>
		<type>int</type>
	</param>

	<param>
		<name>Channel 1 Enabled</name>
		<key>ch1_en</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>Channel 2 Enabled</name>
		<key>ch2_en</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>Channel 3 Enabled</name>
		<key>ch3_en</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>Channel 4 Enabled</name>
		<key>ch4_en</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>Quadrature</name>
		<key>quadrature</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>RF DC</name>
		<key>rfdc</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>BB DC</name>
		<key>bbdc</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>Gain Mode (RX1)</name>
		<key>gain1</key>
		<type>enum</type>
		<option>
			<name>Manual</name>
			<key>"manual"</key>
		</option>
		<option>
			<name>Slow</name>
			<key>"slow_attack"</key>
		</option>
		<option>
			<name>Fast</name>
			<key>"fast_attack"</key>
		</option>
		<option>
			<name>Hybrid</name>
			<key>"hybrid"</key>
		</option>
	</param>

	<param>
		<name>Manual Gain (RX1)(dB)</name>
		<key>manual_gain1</key>
		<value>64.0</value>
		<type>real</type>
		<hide>#if $gain1() == '"manual"' then 'none' else 'all'#</hide>
	</param>

	<param>
		<name>Gain Mode (RX2)</name>
		<key>gain2</key>
		<type>enum</type>
		<option>
			<name>Manual</name>
			<key>"manual"</key>
		</option>
		<option>
			<name>Slow</name>
			<key>"slow_attack"</key>
		</option>
		<option>
			<name>Fast</name>
			<key>"fast_attack"</key>
		</option>
		<option>
			<name>Hybrid</name>
			<key>"hybrid"</key>
		</option>
	</param>

	<param>
		<name>Manual Gain (RX2)(dB)</name>
		<key>manual_gain2</key>
		<value>64.0</value>
		<type>real</type>
		<hide>#if $gain2() == '"manual"' then 'none' else 'all'#</hide>
	</param>

	<param>
		<name>Gain Mode (RX3)</name>
		<key>gain3</key>
		<type>enum</type>
		<option>
			<name>Manual</name>
			<key>"manual"</key>
		</option>
		<option>
			<name>Slow</name>
			<key>"slow_attack"</key>
		</option>
		<option>
			<name>Fast</name>
			<key>"fast_attack"</key>
		</option>
		<option>
			<name>Hybrid</name>
			<key>"hybrid"</key>
		</option>
	</param>

	<param>
		<name>Manual Gain (RX3)(dB)</name>
		<key>manual_gain3</key>
		<value>64.0</value>
		<type>real</type>
		<hide>#if $gain3() == '"manual"' then 'none' else 'all'#</hide>
	</param>

	<param>
		<name>Gain Mode (RX4)</name>
		<key>gain4</key>
		<type>enum</type>
		<option>
			<name>Manual</name>
			<key>"manual"</key>
		</option>
		<option>
			<name>Slow</name>
			<key>"slow_attack"</key>
		</option>
		<option>
			<name>Fast</name>
			<key>"fast_attack"</key>
		</option>
		<option>
			<name>Hybrid</name>
			<key>"hybrid"</key>
		</option>
	</param>

	<param>
		<name>Manual Gain (RX4)(dB)</name>
		<key>manual_gain4</key>
		<value>64.0</value>
		<type>real</type>
		<hide>#if $gain4() == '"manual"' then 'none' else 'all'#</hide>
	</param>

	<param>
		<name>RF Port Select</name>
		<key>rf_port_select</key>
		<type>enum</type>
		<option>
			<name>A_BALANCED</name>
			<key>"A_BALANCED"</key>
		</option>
		<option>
			<name>B_BALANCED</name>
			<key>"B_BALANCED"</key>
		</option>
		<option>
			<name>C_BALANCED</name>
			<key>"C_BALANCED"</key>
		</option>
		<option>
			<name>A_N</name>
			<key>"A_N"</key>
		</option>
		<option>
			<name>A_P</name>
			<key>"A_P"</key>
		</option>
		<option>
			<name>B_N</name>
			<key>"B_N"</key>
		</option>
		<option>
			<name>B_P</name>
			<key>"B_P"</key>
		</option>
		<option>
			<name>C_N</name>
			<key>"C_N"</key>
		</option>
		<option>
			<name>C_P</name>
			<key>"C_P"</key>
		</option>
		<option>
			<name>TX_MONITOR1</name>
			<key>"TX_MONITOR1"</key>
		</option>
		<option>
			<name>TX_MONITOR2</name>
			<key>"TX_MONITOR2"</key>
		</option>
		<option>
			<name>TX_MONITOR1_2</name>
			<key>"TX_MONITOR1_2"</key>
		</option>
	</param>

	<param>
		<name>Filter</name>
		<key>filter</key>
		<value></value>
		<type>file_open</type>
	</param>

	<check>sum([$ch1_en, $ch2_en, $ch3_en, $ch4_en]) &gt; 0</check>
	<check>$samplerate &gt;= 2084000</check>

	<!-- Can't have negative values for curtain parameters. -->
	<check>($frequency1 &gt;= 0)</check>
	<check>($frequency2 &gt;= 0)</check>
	<check>($bandwidth &gt;= 0)</check>
	<check>($samplerate &gt;= 0)</check>

	<source>
		<name>out</name>
		<type>complex</type>
		<nports>sum([$ch1_en, $ch2_en, $ch3_en, $ch4_en])</nports>
	</source>
</block>
