<?xml version="1.0"?>
<block>
	<name>FMComms2/3/4 Source</name>
	<key>iio_fmcomms2_source</key>
	<category>[Industrial IO]/FMComms</category>
	<flags>throttle</flags>
	<import>from gnuradio import iio</import>
	<make>iio.fmcomms2_source_f32c($uri, int($frequency), int($samplerate), int($bandwidth), $rx1_en, $rx2_en, $buffer_size, $quadrature, $rfdc, $bbdc, $gain1, $manual_gain1, $gain2, $manual_gain2, $rf_port_select, $filter, $auto_filter)</make>
	<callback>set_params(int($frequency), int($samplerate), int($bandwidth), $quadrature, $rfdc, $bbdc, $gain1, $manual_gain1, $gain2, $manual_gain2, $rf_port_select, $filter, $auto_filter)</callback>

	<param>
		<name>IIO context URI</name>
		<key>uri</key>
		<value>local:</value>
		<type>string</type>
	</param>

	<param>
		<name>LO Frequency</name>
		<key>frequency</key>
		<value>2400000000</value>
		<type>real</type>
	</param>

	<param>
		<name>Sample rate</name>
		<key>samplerate</key>
		<value>2084000</value>
		<type>real</type>
	</param>

	<param>
		<name>RF bandwidth</name>
		<key>bandwidth</key>
		<value>20000000</value>
		<type>real</type>
	</param>

	<param>
		<name>Buffer size</name>
		<key>buffer_size</key>
		<value>0x8000</value>
		<type>int</type>
	</param>

	<param>
		<name>RX1 Enabled</name>
		<key>rx1_en</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>RX2 Enabled</name>
		<key>rx2_en</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>Quadrature</name>
		<key>quadrature</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>RF DC</name>
		<key>rfdc</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>BB DC</name>
		<key>bbdc</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>Gain Mode (RX1)</name>
		<key>gain1</key>
		<type>enum</type>
		<option>
			<name>Manual</name>
			<key>"manual"</key>
		</option>
		<option>
			<name>Slow</name>
			<key>"slow_attack"</key>
		</option>
		<option>
			<name>Fast</name>
			<key>"fast_attack"</key>
		</option>
		<option>
			<name>Hybrid</name>
			<key>"hybrid"</key>
		</option>
	</param>

	<param>
		<name>Manual Gain (RX1)(dB)</name>
		<key>manual_gain1</key>
		<value>64.0</value>
		<type>real</type>
		<hide>#if $gain1() == '"manual"' then 'none' else 'all'#</hide>
	</param>

	<param>
		<name>Gain Mode (RX2)</name>
		<key>gain2</key>
		<type>enum</type>
		<option>
			<name>Manual</name>
			<key>"manual"</key>
		</option>
		<option>
			<name>Slow</name>
			<key>"slow_attack"</key>
		</option>
		<option>
			<name>Fast</name>
			<key>"fast_attack"</key>
		</option>
		<option>
			<name>Hybrid</name>
			<key>"hybrid"</key>
		</option>
	</param>

	<param>
		<name>Manual Gain (RX2)(dB)</name>
		<key>manual_gain2</key>
		<value>64.0</value>
		<type>real</type>
		<hide>#if $gain2() == '"manual"' then 'none' else 'all'#</hide>
	</param>

	<param>
		<name>RF Port Select</name>
		<key>rf_port_select</key>
		<type>enum</type>
		<option>
			<name>A_BALANCED</name>
			<key>"A_BALANCED"</key>
		</option>
		<option>
			<name>B_BALANCED</name>
			<key>"B_BALANCED"</key>
		</option>
		<option>
			<name>C_BALANCED</name>
			<key>"C_BALANCED"</key>
		</option>
		<option>
			<name>A_N</name>
			<key>"A_N"</key>
		</option>
		<option>
			<name>A_P</name>
			<key>"A_P"</key>
		</option>
		<option>
			<name>B_N</name>
			<key>"B_N"</key>
		</option>
		<option>
			<name>B_P</name>
			<key>"B_P"</key>
		</option>
		<option>
			<name>C_N</name>
			<key>"C_N"</key>
		</option>
		<option>
			<name>C_P</name>
			<key>"C_P"</key>
		</option>
		<option>
			<name>TX_MONITOR1</name>
			<key>"TX_MONITOR1"</key>
		</option>
		<option>
			<name>TX_MONITOR2</name>
			<key>"TX_MONITOR2"</key>
		</option>
		<option>
			<name>TX_MONITOR1_2</name>
			<key>"TX_MONITOR1_2"</key>
		</option>
	</param>

	<param>
		<name>Filter</name>
		<key>filter</key>
		<value></value>
		<type>file_open</type>
	</param>

	<param>
		<name>Filter auto</name>
		<key>auto_filter</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<check>sum([$rx1_en, $rx2_en]) &gt; 0</check>

	<!-- if we're below 2.084 MSPS, we require either a user-supplied filter, or the auto filter. -->
	<check>($samplerate &gt;= 2084000) or (len($filter) &gt; 0) or $auto_filter</check>

	<!-- Can't have negative values for curtain parameters. -->
	<check>($frequency &gt;= 0)</check>
	<check>($bandwidth &gt;= 0)</check>
	<check>($samplerate &gt;= 0)</check>

	<!-- We can't enable user-supplied filter and auto-filter at the same time. -->
	<check>not ($auto_filter and len($filter))</check>

	<source>
		<name>out</name>
		<type>complex</type>
		<nports>sum([$rx1_en, $rx2_en])</nports>
	</source>
</block>
