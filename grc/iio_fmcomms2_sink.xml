<?xml version="1.0"?>
<block>
	<name>FMComms2/3/4 Sink</name>
	<key>iio_fmcomms2_sink</key>
	<category>[Industrial IO]/FMComms</category>
	<flags>throttle</flags>
	<import>from gnuradio import iio</import>
	<make>iio.fmcomms2_sink_f32c($uri, int($frequency), int($samplerate), int($bandwidth), $tx1_en, $tx2_en, $buffer_size, $cyclic, $rf_port_select, $attenuation1, $attenuation2, $filter, $auto_filter)</make>
	<callback>set_params(int($frequency), int($samplerate), int($bandwidth), $rf_port_select, $attenuation1, $attenuation2, $filter, $auto_filter)</callback>

	<param>
		<name>IIO context URI</name>
		<key>uri</key>
		<value>local:</value>
		<type>string</type>
	</param>

	<param>
		<name>LO Frequency</name>
		<key>frequency</key>
		<value>2400000000</value>
		<type>real</type>
	</param>

	<param>
		<name>Sample rate</name>
		<key>samplerate</key>
		<value>2084000</value>
		<type>real</type>
	</param>

	<param>
		<name>RF bandwidth</name>
		<key>bandwidth</key>
		<value>20000000</value>
		<type>real</type>
	</param>

	<param>
		<name>Buffer size</name>
		<key>buffer_size</key>
		<value>0x8000</value>
		<type>int</type>
	</param>

	<param>
		<name>TX1 Enabled</name>
		<key>tx1_en</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>TX2 Enabled</name>
		<key>tx2_en</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>Cyclic</name>
		<key>cyclic</key>
		<value>False</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>RF Port Select</name>
		<key>rf_port_select</key>
		<type>enum</type>
		<option>
			<name>A</name>
			<key>"A"</key>
		</option>
		<option>
			<name>B</name>
			<key>"B"</key>
		</option>
	</param>

	<param>
		<name>Attenuation TX1 (dB)</name>
		<key>attenuation1</key>
		<value>10.0</value>
		<type>real</type>
	</param>

	<param>
		<name>Attenuation TX2 (dB)</name>
		<key>attenuation2</key>
		<value>10.0</value>
		<type>real</type>
	</param>

	<param>
		<name>Filter</name>
		<key>filter</key>
		<value></value>
		<type>file_open</type>
	</param>

	<param>
		<name>Filter auto</name>
		<key>auto_filter</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>


	<check>sum([$tx1_en, $tx2_en]) &gt; 0</check>

	<!-- if we're below 2.084 MSPS, we require either a user-supplied filter, or the auto filter. -->
	<check>($samplerate &gt;= 2084000) or (len($filter) &gt; 0) or $auto_filter</check>

	<!-- Can't have negative values for curtain parameters. -->
	<check>($frequency &gt;= 0)</check>
	<check>($bandwidth &gt;= 0)</check>
	<check>($samplerate &gt;= 0)</check>

	<!-- We can't enable user-supplied filter and auto-filter at the same time. -->
	<check>not ($auto_filter and len($filter))</check>

	<sink>
		<name>in</name>
		<type>complex</type>
		<nports>sum([$tx1_en, $tx2_en])</nports>
	</sink>
</block>
