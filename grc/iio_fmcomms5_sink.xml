<?xml version="1.0"?>
<block>
	<name>FMComms5 Sink</name>
	<key>iio_fmcomms5_sink</key>
	<category>[Industrial IO]/FMComms</category>
	<flags>throttle</flags>
	<import>from gnuradio import iio</import>
	<make>iio.fmcomms5_sink_f32c($uri, int($frequency1), int($frequency2), int($samplerate), int($bandwidth), $ch1_en, $ch2_en, $ch3_en, $ch4_en, $buffer_size, $cyclic, $rf_port_select, $attenuation1, $attenuation2, $attenuation3, $attenuation4, $filter)</make>
	<callback>set_params(int($frequency1), int($frequency2), int($samplerate), int($bandwidth), $rf_port_select, $attenuation1, $attenuation2, $attenuation3, $attenuation4)</callback>


	<param>
		<name>IIO context URI</name>
		<key>uri</key>
		<value>local:</value>
		<type>string</type>
	</param>

	<param>
		<name>LO Frequency (TX1/TX2)</name>
		<key>frequency1</key>
		<value>2400000000</value>
		<type>real</type>
	</param>

	<param>
		<name>LO Frequency (TX3/TX4)</name>
		<key>frequency2</key>
		<value>2400000000</value>
		<type>real</type>
	</param>

	<param>
		<name>Sample rate</name>
		<key>samplerate</key>
		<value>2084000</value>
		<type>real</type>
	</param>

	<param>
		<name>RF bandwidth</name>
		<key>bandwidth</key>
		<value>20000000</value>
		<type>real</type>
	</param>

	<param>
		<name>Buffer size</name>
		<key>buffer_size</key>
		<value>0x8000</value>
		<type>int</type>
	</param>

	<param>
		<name>Channel 1 Enabled</name>
		<key>ch1_en</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>Channel 2 Enabled</name>
		<key>ch2_en</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>Channel 3 Enabled</name>
		<key>ch3_en</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>Channel 4 Enabled</name>
		<key>ch4_en</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>Cyclic</name>
		<key>cyclic</key>
		<value>False</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>RF Port Select</name>
		<key>rf_port_select</key>
		<type>enum</type>
		<option>
			<name>A</name>
			<key>"A"</key>
		</option>
		<option>
			<name>B</name>
			<key>"B"</key>
		</option>
	</param>

	<param>
		<name>Attenuation TX1 (dB)</name>
		<key>attenuation1</key>
		<value>10.0</value>
		<type>real</type>
	</param>

	<param>
		<name>Attenuation TX2 (dB)</name>
		<key>attenuation2</key>
		<value>10.0</value>
		<type>real</type>
	</param>

	<param>
		<name>Attenuation TX3 (dB)</name>
		<key>attenuation3</key>
		<value>10.0</value>
		<type>real</type>
	</param>

	<param>
		<name>Attenuation TX4 (dB)</name>
		<key>attenuation4</key>
		<value>10.0</value>
		<type>real</type>
	</param>

	<param>
		<name>Filter</name>
		<key>filter</key>
		<value></value>
		<type>file_open</type>
	</param>

	<check>sum([$ch1_en, $ch2_en, $ch3_en, $ch4_en]) &gt; 0</check>
	<check>$samplerate &gt;= 2084000</check>

	<!-- Can't have negative values for curtain parameters. -->
	<check>($frequency1 &gt;= 0)</check>
	<check>($frequency2 &gt;= 0)</check>
	<check>($bandwidth &gt;= 0)</check>
	<check>($samplerate &gt;= 0)</check>

	<sink>
		<name>in</name>
		<type>complex</type>
		<nports>sum([$ch1_en, $ch2_en, $ch3_en, $ch4_en])</nports>
	</sink>
</block>
